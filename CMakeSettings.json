{
    "environments": [
        {
            "generator": "Ninja",
            "buildRoot": "${workspaceRoot}/../builds/geodynamix",
            "cmakeToolchain": "${workspaceRoot}/../vcpkg-ports/scripts/buildsystems/vcpkg.cmake",
            "cmakeCommandArgs": "-DVCPKG_TARGET_TRIPLET=x64-windows-static-vs2019 -DVCPKG_APPLOCAL_DEPS=OFF -DGDX_ENABLE_TESTS=ON -DGDX_PYTHON_BINDINGS=ON"
        }
    ],
    "configurations": [
        {
            "name": "GDX [DBG]",
            "generator": "Ninja",
            "inheritEnvironments": [
                "msvc_x64_x64"
            ],
            "configurationType": "Debug",
            "buildRoot": "${env.buildRoot}/${name}",
            "cmakeToolchain": "${env.cmakeToolchain}",
            "cmakeCommandArgs": "${env.cmakeCommandArgs}",
            "variables": []
        },
        {
            "name": "GDX [REL]",
            "generator": "Ninja",
            "inheritEnvironments": [
                "msvc_x64_x64"
            ],
            "configurationType": "Release",
            "buildRoot": "${env.buildRoot}/${name}",
            "cmakeToolchain": "${env.cmakeToolchain}",
            "cmakeCommandArgs": "${env.cmakeCommandArgs}",
            "variables": []
        }
    ]
}

